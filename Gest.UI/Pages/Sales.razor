@page "/sales"
@using Gest.UI._Features_.Sales.Components
@layout AdminLayout

<PageTitle>Ventes</PageTitle>
<TopAdminNav Title="Gestion des ventes" />
<div class="h-full mt-12 lg:mt-16 p-0" style="padding:0rem;">
    <List/>
</div>
@code {

    [Inject] AdminNavState AdminNavState { get; set; } = null!;
  

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            AdminNavState.CurrentUrl = UrlKeys.Sales;
        }
        return base.OnAfterRenderAsync(firstRender);
    }
}