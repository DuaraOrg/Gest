@page "/"
@namespace Gest.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<component type="typeof(Gest.UI.App)" render-mode="ServerPrerendered" />

<script>
   window.changeDialogSize = (width) => {
       const dialog = document.getElementsByClassName('rz-dialog')[0];
       dialog.style.width = width;
       dialog.style.height = "95vh";
  };

  window.click = (id) => {
      document.getElementById(id).click();
  }
  </script>